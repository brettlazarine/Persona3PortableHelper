<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P3PHelper.MainPage">

    <ScrollView>

        <StackLayout>
            <Label Text="P3P Helper" FontSize="Large" HorizontalOptions="Center" />
            <Label Text="This app is designed to help you with the P3P game." FontSize="Medium" HorizontalOptions="Center" />
            <Label Text="It will help you with the Social Links and the Fusion Spells." FontSize="Medium" HorizontalOptions="Center" />
            <Label Text="It will also help you with the Persona Compendium." FontSize="Medium" HorizontalOptions="Center" />
            <Label Text="This app is not affiliated with Atlus or the Persona series." FontSize="Medium" HorizontalOptions="Center" />

            <Label
                Text="{Binding Arcana}" />
        </StackLayout>
    </ScrollView>

</ContentPage>
