<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P3PHelper.MVVM.Views.SLinks.SLinkInteraction"
             xmlns:converters="clr-namespace:P3PHelper.Converters"
             Title="SLinkInteraction">

    <ContentPage.Resources>
        <converters:SLinkImageConverter x:Key="SLinkImageConverter" />
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout>
            <Label
                Style="{StaticResource SLinkArcana}"
                Text="{Binding Arcana}" />
            <Image 
                Source="{Binding Arcana, Converter={StaticResource SLinkImageConverter}}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>